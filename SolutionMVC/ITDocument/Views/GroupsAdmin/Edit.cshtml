@model ITDocument.ViewModels.GroupViewModel

@{
    ViewBag.Title = "Edit";
}

<section class="content-header">
    <h1>
        Group Admin
        <small> Group Admin/Edit</small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-default">
                <div class="box-header with-border">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.Id)

                            
                            <div class="form-group">
                                <label for="Name" class="control-label col-md-2">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Name" placeholder="Name" name="Name" value="@HttpUtility.HtmlDecode(Model.Name)">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Name" class="control-label col-md-2">Description</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Description" placeholder="Description" name="Description" value="@HttpUtility.HtmlDecode(Model.Description)">
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Permissions", new { @class = "control-label col-md-2" })
                                <span class=" col-md-10">
                                    @foreach (var item in Model.RolesList)
                                    {
                                        <div>
                                            <input type="checkbox" name="selectedRoles" value="@item.Text" checked="@item.Selected" class="checkbox-inline" />
                                            @Html.Label(item.Text, new { @class = "control-label" })
                                        </div>
                                    }
                                </span>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>